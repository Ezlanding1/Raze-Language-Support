{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Raze",
	"scopeName": "source.rz",
	"patterns": [
		{
			"include": "#statements"
		},
		{
			"include": "#symbols"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"statements": {
			"patterns": [
				{
					"include": "#definitions"
				}
			]
		},
		"definitions": {
			"patterns": [
				{
					"match": "(function)(\\s+((static|unsafe|operator|inline)\\s+)*)(([a-zA-Z_][a-zA-Z0-9_]*\\s+)?([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(.*\\))?",
					"captures": {
						"1": {
							"name": "storage.type.function.raze"
						},
						"2": {
							"name": "storage.type.function-modifier.raze"
						},
						"6": {
							"name": "entity.name.type"
						},
						"7": {
							"name": "entity.name.function"
						}
					}
					
				}
			]
		},

		"symbols": {
			"patterns": [
				{
					"include": "#operators"
				},
				{
					"name": "keyword.operator.punctuation.semicolon.raze",
					"match": ";"
				},
				{
					"name": "keyword.operator.punctuation.comma.raze",
					"match": ","
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.increment.raze",
					"match": "\\+\\+"
				},
				{
					"name": "keyword.operator.decrement.raze",
					"match": "--"
				},
				{
					"name": "keyword.operator.bitwise.raze",
					"match": "(&|\\||\\^|<<|>>)"
				},
				{
					"name": "keyword.operator.relational.raze",
					"match": "(!=|<=|>=|==|!|>|<)"
				},
				{
					"name": "keyword.operator.arithmetic.raze",
					"match": "(\\+|-|\\*|%|\\/)"
				}
				
			]
		},

		"constants": {
			"patterns": [
				{
					"include": "#literals"
				},
				{
					"name": "constant.language.null.raze",
					"match": "\\b(null)\\b"
				},
				{
					"name": "constant.language.this.raze",
					"match": "\\b(this)\\b"
				}
			]
		},
		"literals": {
			"patterns": [
				{
					"name": "constant.language.literal.boolean.true.raze",
					"match": "\\b(true)\\b"
				},
				{
					"name": "constant.language.literal.boolean.false.raze",
					"match": "\\b(false)\\b"
				},
				{
					"name": "constant.numeric.literal.integer.raze",
					"match": "[0-9]+"
				},
				{
					"name": "constant.numeric.literal.floating.raze",
					"match": "[0-9]+[.][0-9]+"
				},
				{
					"name": "string.quoted.double.raze",
					"begin": "\"",
					"end": "\"",
					"patterns": [
						{
							"name": "constant.character.escape.raze",
							"match": "\\\\."
						}
					]
				}
			]
		},

		"comments": {
			"name": "comment.line.hash.raze",
			"match": "#.*"
		}
	}
}