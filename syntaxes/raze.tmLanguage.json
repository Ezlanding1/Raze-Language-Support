{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Raze",
	"scopeName": "source.rz",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#symbols"
		},
		{
			"include": "#statements"
		}
	],
	"repository": {
		"statements": {
			"patterns": [
				{
					"include": "#blocks"
				},
				{
					"include": "#definitions"
				},
				{
					"include": "#expressions"
				},
				{
					"include": "#declarations"
				}
			]
		},
		"expressions": {
			"patterns": [
				{
					"match": "[a-zA-Z_][a-zA-Z0-9_]*\\s*\\(",
					"name": "entity.name.function.raze"
				},
				{
					"match": "(new)\\s+(([a-zA-Z_][a-zA-Z0-9_]*)\\.)*([a-zA-Z_][a-zA-Z0-9_]*)",
					"captures": {
						"1": {
							"name": "keyword.operator.new.raze"
						},
						"3": {
							"name": "entity.name.type.raze"
						},
						"4": {
							"name": "entity.name.type.raze"
						}
					}
				},
				{
					"begin": "(is|as)\\s+",
					"beginCaptures": {
						"1": {
							"name": "keyword.isas.raze"
						}
					},
					"end": "(?![a-zA-Z0-9_]|.)",
					"patterns": [
						{
							"match": "[a-zA-Z_][a-zA-Z0-9_]*",
							"name": "entity.name.type.raze"
						}
					]
				}
			]
		},
		"definitions": {
			"patterns": [
				{
					"begin": "import",
					"beginCaptures": {
						"0": {
							"name": "keyword.control.import.raze"
						}
					},
					"end": "((from)\\s+([a-zA-Z_][a-zA-Z_0-9]*))",
					"endCaptures": {
						"2": {
							"name": "keyword.from.raze"
						},
						"3": {
							"name": "entity.name.type.raze"
						}
					},
					"patterns": [
						{
							"match": "[a-zA-Z_][a-zA-Z_0-9]*",
							"name": "entity.name.type.raze"
						}
					]
				},
				{
					"begin": "\\b(function)((\\s+(static|unsafe|operator|inline|dll|extern|ref)\\b)*)",
					"beginCaptures": {
						"1": { "name": "storage.type.function.raze" },
						"2": { "name": "storage.type.function-modifier.raze" }
					},
					"end": "([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
					"endCaptures": {
						"1": { "name": "entity.name.function.raze" }
					},
					"patterns": [
						{
							"match": "[a-zA-Z_][a-zA-Z0-9_]*",
							"name": "entity.name.type.raze"
						}
					]
				},
				{
					"match": "\\)\\s*(from)\\s*(\".*\")",
					"captures": {
						"1": {
							"name": "keyword.from.raze"
						},
						"2": {
							"name": "string.quoted.double.raze"
						}
					}
				},
				{
					"match": "(primitive\\s+class)(\\s+([a-zA-Z_][a-zA-Z0-9_]*)(\\s+(sizeof)(\\s+([0-9]+))?)?)?(\\s+(extends)\\s+(([a-zA-Z_][a-zA-Z0-9_]*)?))?",
					"captures": {
						"1": {
							"name": "storage.type.class.primitive.raze"
						},
						"3": {
							"name": "entity.name.type.raze"
						},
						"5": {
							"name": "keyword.sizeof.raze"
						},
						"7": {
							"name": "constant.numeric.literal.integer.raze"
						},
						"9": {
							"name": "keyword.extends.raze"
						},
						"11": {
							"name": "entity.name.type.raze"
						}
					}
				},
				{
					"match": "(class)(\\s+([a-zA-Z_][a-zA-Z0-9_]*))?(\\s+(extends)\\s+(([a-zA-Z_][a-zA-Z0-9_]*)?))?",
					"captures": {
						"1": {
							"name": "storage.type.class.raze"
						},
						"3": {
							"name": "entity.name.type.raze"
						},
						"5": {
							"name": "keyword.extends.raze"
						},
						"7": {
							"name": "entity.name.type.raze"
						}
					}
				}
			]
		},
		"declarations": {
			"include": "#variables"
		},
		"variables": {
			"patterns": [
				{
					"match": "(ref\\s+)?([a-zA-Z_][a-zA-Z0-9_]*)(?=(\\s*\\.\\s*[a-zA-Z_][a-zA-Z0-9_]*)+\\s+[a-zA-Z_][a-zA-Z0-9_]*)",
					"captures": {
						"1": {
							"name": "keyword.ref.raze"
						},
						"2": {
							"name": "entity.name.type.raze"
						}
					}
				},
				{
					"match": "((ref)|([a-zA-Z_][a-zA-Z0-9_]*))\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
					"captures": {
						"2": {
							"name": "keyword.ref.raze"
						},
						"3": {
							"name": "entity.name.type.raze"
						},
						"4": {
							"name": "variable.name.raze"
						}
					}
				},
				{
					"match": "(\\$\\s*)?([a-zA-Z_][a-zA-Z0-9_]*)(?!\\s*\\()",
					"captures": {
						"1": {
							"name": "punctuation.definition.template-expression.begin.escape.raze"
						},
						"2": {
							"name": "variable.name.raze"
						}
					}
				}
			]
		},
		"blocks": {
			"patterns": [
				{
					"include": "#control-flow"
				},
				{
					"name": "keyword.control.block.asm.raze",
					"match": "asm"
				}
			]
		},
		"control-flow": {
			"patterns": [
				{
					"name": "keyword.control.control-flow.conditional.raze",
					"match": "(if|else)"
				},
				{
					"name": "keyword.control.control-flow.loop.raze",
					"match": "(while|for)"
				},
				{
					"name": "keyword.control.control-flow.flow.raze",
					"match": "return"
				}
			]
		},

		"symbols": {
			"patterns": [
				{
					"include": "#operators"
				},
				{
					"name": "keyword.operator.punctuation.semicolon.raze",
					"match": ";"
				},
				{
					"name": "keyword.operator.punctuation.comma.raze",
					"match": ","
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.increment.raze",
					"match": "\\+\\+"
				},
				{
					"name": "keyword.operator.decrement.raze",
					"match": "--"
				},
				{
					"name": "keyword.operator.bitwise.raze",
					"match": "(&|\\||\\^|<<|>>)"
				},
				{
					"name": "keyword.operator.relational.raze",
					"match": "(!=|<=|>=|==|!|>|<)"
				},
				{
					"name": "keyword.operator.arithmetic.raze",
					"match": "(\\+|-|\\*|%|\\/)"
				}
				
			]
		},

		"constants": {
			"patterns": [
				{
					"include": "#literals"
				},
				{
					"name": "constant.language.null.raze",
					"match": "\\b(null)\\b"
				},
				{
					"name": "constant.language.this.raze",
					"match": "\\b(this)\\b"
				}
			]
		},
		"literals": {
			"patterns": [
				{
					"name": "constant.language.literal.boolean.true.raze",
					"match": "\\b(true)\\b"
				},
				{
					"name": "constant.language.literal.boolean.false.raze",
					"match": "\\b(false)\\b"
				},
				{
					"name": "constant.numeric.literal.binary.raze",
					"match": "[0-1]+b"
				},
				{
					"name": "constant.numeric.literal.hex.raze",
					"match": "0[xX][0-9a-fA-F]+"
				},
				{
					"name": "constant.numeric.literal.floating.raze",
					"match": "[0-9]+[.][0-9]+"
				},
				{
					"name": "constant.numeric.literal.integer.raze",
					"match": "[0-9]+"
				},
				{
					"name": "string.quoted.double.raze",
					"begin": "\"",
					"end": "\"",
					"patterns": [
						{
							"name": "constant.character.escape.raze",
							"match": "\\\\."
						}
					]
				},
				{
					"name": "string.quoted.single.raze",
					"begin": "'",
					"end": "'",
					"patterns": [
						{
							"name": "constant.character.escape.raze",
							"match": "\\\\."
						}
					]
				}
			]
		},

		"comments": {
			"name": "comment.line.hash.raze",
			"match": "#.*"
		}
	}
}
